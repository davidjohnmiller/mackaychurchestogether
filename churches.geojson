---
layout: nil
---
{
    "type": "FeatureCollection",
    "features": [
      {% for church in site.churches %}
        {
            "type": "Feature",
            "geometry": {
                "type": "Point",
                "coordinates": [{{ church.coordinates.longitude }}, {{ church.coordinates.latitude }}]
            },
            "properties": {
                "marker-symbol": "religious-christian",
                "marker-size": "large",
                "title": "{{ church.title }}",
                "description": "{% for service in church.services %}{{ service.day }} {{ service.time }} {% if service.description %}({{ service.description }}){% endif %}% unless forloop.last %}\n{% endunless %}{% endfor %}",
                "url": "{{ site.url }}{{ church.url }}"
            }
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
}
